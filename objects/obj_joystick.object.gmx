            <kind>1</kind>
            <string>pdrag=dragging
x=obj_touchscreen.JoyX/2
y=obj_touchscreen.JoyY/2


for(i=0;i&lt;6;i++){
    if device_mouse_check_button(i, mb_left)
    &amp;&amp; device_mouse_x(i)&gt;x-32
    &amp;&amp; device_mouse_y(i)&gt;y-32
    &amp;&amp; device_mouse_x(i)&lt;x+32
    &amp;&amp; device_mouse_y(i)&lt;y+32{
        dragging=true
        dragi=i
    }
    if device_mouse_check_button_released(i, mb_left)
    &amp;&amp; dragi=i{
        dragging=false
        dragi=-1
        joy_x=0;
        joy_y=0;
    }
    if device_mouse_check_button(i, mb_left)
    &amp;&amp; dragi=i{
        if dragging==1{
            joy_x=device_mouse_x(i)-x;
            joy_y=device_mouse_y(i)-y;
            if joy_x&gt;sprite_width/2 {
                joy_x=sprite_width/2
            }
            if joy_x&lt;-sprite_width/2 {
                joy_x=-sprite_width/2
            }
            
            if joy_y&gt;sprite_height/2 {
                joy_y=sprite_height/2
            }
            if joy_y&lt;-sprite_height/2 {
                joy_y=-sprite_height/2
            }
        }
    }
    
}
</string>
